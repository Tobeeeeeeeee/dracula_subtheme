{% extends "@bootstrap_barrio/layout/page.html.twig" %}

{% block content %}
  <div class="container bg-dark text-white py-5">
    <div class="text-center mb-5">
      <h1 class="display-3 text-pink">Welcome to the Dracula Theme</h1>
      <p class="lead text-orange">Dark, elegant, and just a little bit spooky.</p>
    </div>

    <div class="row mb-4">
      <div class="col-md-6">
        <div class="card bg-gray-dark text-white h-100 border-gray">
          <div class="card-body">
            <h4 class="card-title text-purple"> Lightning Fast</h4>
            <p class="card-text">Built with Bootstrap 5 and themed with Dracula palette for fast, beautiful layouts.</p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card bg-gray-dark text-white h-100 border-gray">
          <div class="card-body">
            <h4 class="card-title text-purple">📱 Fully Responsive</h4>
            <p class="card-text">Mobile-friendly out of the box with dark mode styling for all devices.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center my-5">
      <a class="btn btn-primary btn-lg" href="/contact"> Get in Touch</a>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="card bg-gray-dark text-white mb-4 border-gray">
          <div class="card-body">
            <h5 class="card-title text-pink"> Modular</h5>
            <p class="card-text">Use components with ease thanks to Bootstrap's utility classes.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-gray-dark text-white mb-4 border-gray">
          <div class="card-body">
            <h5 class="card-title text-pink"> Modern</h5>
            <p class="card-text">CSS variables and clean typography make your site stand out.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card bg-gray-dark text-white mb-4 border-gray">
          <div class="card-body">
            <h5 class="card-title text-pink"> Accessible</h5>
            <p class="card-text">Dracula contrast ratios are high enough for excellent accessibility.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
